/* 消息滚动样式 */
.swiper_container {
  height: 55rpx;
  width: 80vw;
}

.swiper_item {
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
}

/* 分类左边菜单栏样式 */
.cate{
  width: 100%;
  height: 100%;
  display: flex;
}
.menu{
  height: 100%;
  width: 25%;
  white-space: nowrap;
  margin: 0;
  padding: 0;
}
.btn{
  background-color: #f8f8f0;
  height: 200rpx;
  line-height: 100rpx;
  text-align: center;
  color: #292727;
  font-size: 24rpx;
  font-weight: 600;
  opacity: 0.9;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.hover{
  background-color: #fff;
  color: #292727;
}